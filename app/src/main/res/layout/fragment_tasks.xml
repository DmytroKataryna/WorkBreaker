<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.tasks.TasksFragment">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/tasks_input_field"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/ic__sun_bg"
            android:elevation="1dp"
            android:gravity="center"
            android:hint="@string/tasks_hint_text"
            android:padding="40dp"
            android:textColor="@color/black"
            android:textColorHint="@color/yellow_700"
            app:layout_constraintBottom_toBottomOf="@+id/background_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enable_geo_feature_switch" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/enable_geo_feature_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="26dp"
            android:background="@drawable/selector_image_icons"
            android:elevation="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/enable_geo_feature_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:elevation="1dp"
            app:layout_constraintEnd_toEndOf="@+id/enable_geo_feature_image"
            app:layout_constraintStart_toStartOf="@+id/enable_geo_feature_image"
            app:layout_constraintTop_toBottomOf="@+id/enable_geo_feature_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>